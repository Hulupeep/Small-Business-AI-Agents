# Retail AI Toolkit Environment Variables
# Copy this file to .env and fill in your actual values

# AI/Language Model API Keys
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_key_here  # Optional: for Claude models

# Store Configuration
STORE_NAME="Threads & Things"
STORE_EMAIL=hello@threadsandthings.ie
STORE_PHONE="+353-1-234-5678"

# Database Configuration (if using database instead of CSV)
DATABASE_URL=sqlite:///data/retail_store.db

# Email Configuration (for notifications and marketing)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASSWORD=your_app_password_here
EMAIL_USE_TLS=true

# Social Media API Keys (optional)
INSTAGRAM_ACCESS_TOKEN=your_instagram_token_here
FACEBOOK_ACCESS_TOKEN=your_facebook_token_here
TWITTER_API_KEY=your_twitter_api_key_here
TWITTER_API_SECRET=your_twitter_api_secret_here

# SMS/WhatsApp Configuration (optional)
TWILIO_ACCOUNT_SID=your_twilio_sid_here
TWILIO_AUTH_TOKEN=your_twilio_token_here
TWILIO_PHONE_NUMBER=+1234567890

# E-commerce Platform Integration (optional)
SHOPIFY_API_KEY=your_shopify_api_key_here
SHOPIFY_API_SECRET=your_shopify_secret_here
SHOPIFY_SHOP_DOMAIN=your-shop.myshopify.com

SQUARE_ACCESS_TOKEN=your_square_access_token_here
SQUARE_LOCATION_ID=your_square_location_id_here

# Email Marketing (optional)
MAILCHIMP_API_KEY=your_mailchimp_api_key_here
MAILCHIMP_LIST_ID=your_mailchimp_list_id_here

KLAVIYO_API_KEY=your_klaviyo_api_key_here

# Analytics and Monitoring (optional)
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
MIXPANEL_TOKEN=your_mixpanel_token_here

# Payment Processing (optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here

# Cloud Storage (optional, for backing up data)
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_key_here
AWS_S3_BUCKET=your-retail-ai-bucket

# Development Settings
DEBUG=true
LOG_LEVEL=INFO

# Security
SECRET_KEY=your_secret_key_for_sessions_here
JWT_SECRET=your_jwt_secret_here

# Performance Monitoring
SENTRY_DSN=your_sentry_dsn_here  # Optional: for error tracking

# Webhook URLs (for notifications)
SLACK_WEBHOOK_URL=your_slack_webhook_url_here
DISCORD_WEBHOOK_URL=your_discord_webhook_url_here

# AI Agent Configuration
AGENT_RESPONSE_TIMEOUT=30  # seconds
MAX_CONCURRENT_AGENTS=5
ENABLE_AGENT_LOGGING=true

# Data Processing
MAX_BATCH_SIZE=100
CACHE_TIMEOUT=3600  # 1 hour in seconds

# Rate Limiting
API_RATE_LIMIT=100  # requests per minute
SOCIAL_MEDIA_POST_LIMIT=10  # posts per day

# Backup Configuration
BACKUP_FREQUENCY=daily
BACKUP_RETENTION_DAYS=30
ENABLE_CLOUD_BACKUP=false