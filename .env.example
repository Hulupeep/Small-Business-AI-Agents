# LangChain Small Business Agents - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===== GENERAL SETTINGS =====
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-here-change-this
MAX_CONCURRENT_AGENTS=5

# ===== DATABASE CONFIGURATION =====
DB_HOST=localhost
DB_PORT=5432
DB_NAME=langchain_business
DB_USERNAME=postgres
DB_PASSWORD=your-database-password

# ===== CORE LLM API KEYS =====
# At least one of these is required
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=your-anthropic-api-key-here
GOOGLE_API_KEY=your-google-api-key-here

# ===== LANGCHAIN SETTINGS =====
LANGCHAIN_TRACING=false
LANGCHAIN_ENDPOINT=
LANGCHAIN_API_KEY=

# ===== CACHE CONFIGURATION =====
CACHE_TYPE=memory
REDIS_URL=redis://localhost:6379

# ===== SECURITY SETTINGS =====
JWT_EXPIRATION=3600

# ===== SOCIAL MEDIA API KEYS =====
# Twitter/X API (for Social Media Manager Agent)
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret
TWITTER_ACCESS_TOKEN=your-twitter-access-token
TWITTER_ACCESS_SECRET=your-twitter-access-secret

# Facebook API (for Social Media Manager Agent)
FACEBOOK_ACCESS_TOKEN=your-facebook-access-token

# LinkedIn API (for Social Media Manager Agent)
LINKEDIN_ACCESS_TOKEN=your-linkedin-access-token

# ===== EMAIL SERVICE API KEYS =====
# SendGrid (for Email Marketing Agent)
SENDGRID_API_KEY=your-sendgrid-api-key

# Mailchimp (for Email Marketing Agent)
MAILCHIMP_API_KEY=your-mailchimp-api-key

# ===== FINANCIAL DATA API KEYS =====
# Alpha Vantage (for Financial Analyst Agent)
ALPHA_VANTAGE_API_KEY=your-alpha-vantage-api-key

# Quandl (for Financial Analyst Agent)
QUANDL_API_KEY=your-quandl-api-key

# ===== DOCUMENT PROCESSING API KEYS =====
# Azure Form Recognizer (for Document Processor Agent)
AZURE_FORM_RECOGNIZER_KEY=your-azure-form-recognizer-key
AZURE_FORM_RECOGNIZER_ENDPOINT=https://your-resource.cognitiveservices.azure.com/

# ===== SEARCH AND RESEARCH API KEYS =====
# SerpAPI (for Market Research Agent)
SERP_API_KEY=your-serp-api-key

# News API (for Market Research Agent)
NEWS_API_KEY=your-news-api-key

# ===== CUSTOMER SERVICE API KEYS =====
# Zendesk (for Customer Service Agent)
ZENDESK_SUBDOMAIN=your-zendesk-subdomain
ZENDESK_EMAIL=your-zendesk-email
ZENDESK_TOKEN=your-zendesk-token

# ===== AGENT-SPECIFIC MODEL OVERRIDES =====
# Override default models for specific agents (optional)
CUSTOMER_SERVICE_MODEL=gpt-3.5-turbo
SALES_QUALIFIER_MODEL=gpt-4
CONTENT_CREATOR_MODEL=gpt-4
FINANCIAL_ANALYST_MODEL=gpt-4
HR_ASSISTANT_MODEL=gpt-3.5-turbo
INVENTORY_MANAGER_MODEL=gpt-3.5-turbo
EMAIL_MARKETING_MODEL=gpt-4
SOCIAL_MEDIA_MODEL=gpt-4
MARKET_RESEARCH_MODEL=gpt-4
DOCUMENT_PROCESSOR_MODEL=gpt-4

# ===== ADDITIONAL SERVICE API KEYS =====
# Add any other service API keys your business uses
# CRM_API_KEY=your-crm-api-key
# ACCOUNTING_API_KEY=your-accounting-api-key
# CALENDAR_API_KEY=your-calendar-api-key
# FILE_STORAGE_API_KEY=your-file-storage-api-key

# ===== MONITORING AND ANALYTICS =====
# Prometheus monitoring (optional)
PROMETHEUS_PORT=8000

# ===== WEBHOOK ENDPOINTS =====
# For receiving webhooks from external services
# WEBHOOK_SECRET=your-webhook-secret
# WEBHOOK_URL=https://your-domain.com/webhooks

# ===== EMAIL CONFIGURATION =====
# SMTP settings for sending emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-email-password
SMTP_USE_TLS=true

# ===== FILE STORAGE =====
# Local file storage path
FILE_STORAGE_PATH=./data/files

# Cloud storage (optional)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=your-s3-bucket-name
AWS_REGION=us-east-1

# ===== RATE LIMITING =====
# API rate limiting settings
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ===== BACKUP SETTINGS =====
# Backup configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30

# ===== DEVELOPMENT SETTINGS =====
# Only for development environment
DEV_MODE=false
MOCK_EXTERNAL_APIS=false
ENABLE_DEBUG_TOOLBAR=false